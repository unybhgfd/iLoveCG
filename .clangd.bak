CompileFlags:
    Remove:
        - "--expt-extended-lambda"
        - '-gencode=arch=compute_60,code="sm_60,compute_60"'
        - "-rdc=true"
        - '-forward-unknown-to-host-compiler'
        - '--expt-relaxed-constexpr'
        - '--generate-code=arch=compute_52,code=[compute_52,sm_52]'
        - '-forward-unknown-to-host-compiler'
        - '-arch=native'
        - '--options-file'
        - '-Xcompiler=-fPIC'
    Add: 
        - '-std=c++20'
        - '--cuda-gpu-arch=sm_80'
    Compiler: clang++
